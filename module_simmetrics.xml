<?xml version="1.0" encoding="ISO-8859-1"?>
<project name="module_simmetrics" default="compile.module.simmetrics">
  <dirname property="module.simmetrics.basedir" file="${ant.file.module_simmetrics}"/>
  
  <property name="module.jdk.home.simmetrics" value="${project.jdk.home}"/>
  <property name="module.jdk.classpath.simmetrics" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.simmetrics" value="${compiler.args}"/>
  
  <property name="simmetrics.output.dir" value="${module.simmetrics.basedir}/classes"/>
  <property name="simmetrics.testoutput.dir" value="${module.simmetrics.basedir}/classes"/>
  
  <path id="simmetrics.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="simmetrics.module.classpath">
    <path refid="${module.jdk.classpath.simmetrics}"/>
  </path>
  
  
  <patternset id="excluded.from.module.simmetrics">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.simmetrics">
    <patternset refid="excluded.from.module.simmetrics"/>
  </patternset>
  
  <path id="simmetrics.module.sourcepath">
    <dirset dir="${module.simmetrics.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.simmetrics" depends="compile.module.simmetrics.production,compile.module.simmetrics.tests" description="compile module(s) simmetrics"/>
  
  <target name="compile.module.simmetrics.production" description="compile module(s) simmetrics production classes">
    <mkdir dir="${simmetrics.output.dir}"/>
    <javac2 destdir="${simmetrics.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memoryMaximumSize="${compiler.max.memory}" fork="true" executable="${module.jdk.home.simmetrics}/bin/javac">
      <compilerarg line="${compiler.args.simmetrics}"/>
      <bootclasspath refid="simmetrics.module.bootclasspath"/>
      <classpath refid="simmetrics.module.classpath"/>
      <src refid="simmetrics.module.sourcepath"/>
    </javac2>
    <copy todir="${simmetrics.output.dir}">
      <fileset dir="${module.simmetrics.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.simmetrics.tests" depends="compile.module.simmetrics.production" description="compile module(s) simmetrics test classes" unless="skip.tests"/>
  
  <target name="clean.module.simmetrics" description="cleanup module">
    <delete dir="${simmetrics.output.dir}"/>
    <delete dir="${simmetrics.testoutput.dir}"/>
  </target>
</project>